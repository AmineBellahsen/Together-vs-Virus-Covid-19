    .row
        // Area Chart
        .col-xl-8.col-lg-7
            .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Alerts History
                // Card Body
                .card-body
                    .form-group.row.margin-zero
                        label.col-sm-4.col-form-label.col-form-label-sm Show for Business Unit:
                        .col-sm-6
                            select.custom-select#business-list(name='business', placehoder="")
                                option(value="all") Show All
                                each business in businesses
                                    option(value = business._id)= business.name
                    .chart-area
                        .chartjs-size-monitor
                            .chartjs-size-monitor-expand
                                div
                            .chartjs-size-monitor-shrink
                                div
                        canvas#myAreaChart.chartjs-render-monitor(width='1244', height='640', style='display: block; height: 320px; width: 622px;')
        // Pie Chart
        .col-xl-4.col-lg-5
            .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Alerts Distribution
                    .dropdown.no-arrow
                        a#dropdownMenuLink.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                        .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                            .dropdown-header Filter alerts of type:
                            a.dropdown-item(href='#') Temperature
                            a.dropdown-item(href='#') Masks
                            a.dropdown-item(href='#')#social-dist Social distancing
                            //-.dropdown-divider
                            //-a.dropdown-item(href='#') Social distancing
                // Card Body
                .card-body
                    .chart-pie.pt-4.pb-2
                        .chartjs-size-monitor
                            .chartjs-size-monitor-expand
                                div
                            .chartjs-size-monitor-shrink
                                div
                        canvas#myPieChart.chartjs-render-monitor(width='556', height='490', style='display: block; height: 245px; width: 278px;')
                    .mt-4.text-center.small#legend
                        span.mr-2
                            i.fas.fa-circle.text-warning
                            |  Temperture
                        span.mr-2
                            i.fas.fa-circle.text-secondary
                            |  Masks
                        span.mr-2
                            i.fas.fa-circle.text-danger
                            |  Social distancing

